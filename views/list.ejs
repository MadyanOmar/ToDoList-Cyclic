<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>
  <div class="box">
    <ul>
      <% newtasks.forEach((task)=>{ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=task._id%>" onChange="this.form.submit()">
            <p>
              <%= task.name %>
            </p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
        <% }) %>
    </ul>
    <form class="item" action="/" method="POST">
      <input type="text" name="newtask" id="newtask" placeholder="New Task" autocomplete="off">
      <button type="submit" name="listType" value="<%= listTitle %>">+</button>
    </form>
  </div>
</body>

</html>